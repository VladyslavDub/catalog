<div class="">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/products">Products</a></li>
      <li class="breadcrumb-item"><%=link_to @category.name, category_path(@category)%></li>
      <li class="breadcrumb-item active" aria-current="page"><%=@product.name%></li>
    </ol>
  </nav>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-4">
      <%=image_tag @product.image, alt:@product.name, title:@product.name%>
    </div>
    <div class="col-12 col-md-6 col-lg-8">
      <h1><%=@product.name%></h1>
      <div class="mb-3">
        <span>$<%=@product.price%></span>
        <br />
        <span><%=@product.available ? "В наявності" : "Немає в наявності"%></span>
        <br />
          <button type="button" name="button" class="order_by_click btn btn-success" data-bs-toggle="modal" data-bs-target="#orderByClickModal">Замовити в один клік</button>
        <%=render "orders/form"%>
      </div>
      <div class="">
        Maker:  <span> <%=link_to @product.maker.name, maker_path(@product.maker)%></span>
      </div>
    </div>
    <div class="col-12 mt-4">
      <h2>
        Опис:
      </h2>
      <p>
        <%=@product.description.html_safe%>
      </p>
    </div>
  </div>
</div>
